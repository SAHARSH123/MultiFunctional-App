<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saharsh.project.Calculator"
    android:background="#ec720f"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/textView3"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:gravity="bottom|right" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/btn8"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/btn9"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/btn4"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/btn5"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/btn6"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/btn1"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/btn2"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/btn3"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:id="@+id/btnc"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/btn0"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btnc"
        android:layout_toEndOf="@+id/btnc" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/btneq"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btnadd"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btnsub"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_above="@+id/btn3"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="X"
        android:id="@+id/btnmul"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/btndiv"
        android:background="#7d7474"
        android:textColor="#fbe53e"
        android:textSize="30dp"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btneq"
        android:layout_toEndOf="@+id/btneq" />

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="BACK"
        android:id="@+id/btnbck"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#110000"
        android:textColor="#f7f1f1"
        android:textSize="20dp" />
</RelativeLayout>
