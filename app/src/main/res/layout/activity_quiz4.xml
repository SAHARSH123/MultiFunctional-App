<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/my_background"
    android:id="@+id/myLayout"
    tools:context="com.example.saharsh.project.Quiz4">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother India"
            android:id="@+id/radioButton17"
            android:checked="false"
            android:textSize="20dp"
            android:textStyle="italic" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Guide"
            android:id="@+id/radioButton18"
            android:checked="false"
            android:textSize="20dp"
            android:textStyle="italic" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Madhumati"
            android:id="@+id/radioButton19"
            android:checked="false"
            android:textSize="20dp"
            android:textStyle="italic" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amrapali"
            android:id="@+id/radioButton20"
            android:checked="false"
            android:textSize="20dp"
            android:textStyle="italic" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="First Indian Movie Submitted for Oscar?"
        android:id="@+id/textView8"
        android:background="#ebe0e0"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_above="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />

    <Button
        android:background="@drawable/btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button24"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />
</RelativeLayout>